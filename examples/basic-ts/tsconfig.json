{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node10",
    "allowSyntheticDefaultImports": true,

    // Short path aliases (required for runtime)
    "baseUrl": ".",
    "paths": {
      "@db": ["./db.ts"],
      "@lib/*": ["./lib/*"]
    },

    // Type definitions
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
